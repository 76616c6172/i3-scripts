#!/usr/bin/env bash

%%cat ___version%%
%%cat ___envs%%
%%cat -v '\(^#!/\)\|\(\s#bashbud$\)' main.sh%%
%%cat ___help%%
%%cat -v '\(^#!/\)' lib/*%%
%%if synopsis%%
%%cat ___getopt%%
%%fi%%

[[ ${__lastarg:="${!#:-}"} =~ ^--$|${0}$ ]] \
  && __lastarg="" \
  || true

main "${@:-}"
